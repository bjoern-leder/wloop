################################################################################
#
# Makefile to compile and link C programs with MPI subroutines
#
# Version valid for Linux machines with MPICH
#
# "make" compiles and links the specified main programs and modules,
# using the specified libraries (if any), and produces the executables
#
# "make clean" removes all files generated by "make"
#
# Dependencies on included files are automatically taken care of
#
################################################################################

all: rmxeq mkdep mkxeq
.PHONY: all


# main programs and modules to be compiled

MAIN = ms10

RANDOM = ranlux ranlxs ranlxd gauss

SU3FCTS = su3prod su3ren random_su3 cm3x3

LATTICE = bcnds uidx ftidx geometry

FLAGS = flags lat_parms

UFLDS = plaq_sum uflds udcom shift

UTILS = endian mutils utils

ARCHIVE = archive

LNK = lnkcom lnkstaple lnkplaq

SMEAR = hyp_links projection hyp_spatial_links ape_links \
        staple_sum

WLOOP = smear wloop_parms wloop

MODULES = $(RANDOM) $(SU3FCTS) $(FLAGS) $(LATTICE) $(UTILS) \
          $(LINALG) $(ARCHIVE) $(UFLDS) \
          $(LNK) $(SMEAR) $(WLOOP)


# path to openQCD

OPENQCD = ../../openQCD-1.4


# Logging option (-mpilog or -mpitrace or -mpianim)

LOGOPTION =


# search path for modules

MDIRH = $(OPENQCD)/modules

MDIRC = ../modules

VPATH = .:$(MDIRH)/random:$(MDIRH)/su3fcts:$(MDIRH)/flags:$(MDIRH)/utils:\
          $(MDIRH)/linalg:$(MDIRH)/archive:$(MDIRH)/uflds:\
          $(MDIRH)/lattice:$(MDIRC)/lnk:$(MDIRC)/smear:$(MDIRC)/wloop:

# additional include directories

INCPATH = $(MPI_INCLUDE) $(OPENQCD)/include/ ../include


# additional libraries

LIBS = m

LIBPATH = $(MPI_HOME)/lib


# scheduling and optimization options (such as -DSSE -DSSE2 -DSSE3 -DP4 -DPM)

#CFLAGS = -Wall -std=c89 -pedantic -Wno-long-long \
#-O -DSSE3 -malign-double -DPM 
CFLAGS = -std=c89 -pedantic -fstrict-aliasing \
         -Wall -Wno-long-long -Wstrict-prototypes -Werror \
         -O -mno-avx -Dx64 -DPM


############################## do not change ###################################

SHELL=/bin/bash
CC=/usr/bin/mpicc
CLINKER=$(CC)

PGMS= $(MAIN) $(MODULES)

-include $(addsuffix .d,$(PGMS))


# rule to make dependencies

$(addsuffix .d,$(PGMS)): %.d: %.c Makefile
	@ gcc -ansi $< -MM $(addprefix -I,$(INCPATH)) -o $@


# rule to compile source programs

$(addsuffix .o,$(PGMS)): %.o: %.c Makefile
	$(CC) $< -c $(CFLAGS) $(LOGOPTION) $(addprefix -I,$(INCPATH))


# rule to link object files

$(MAIN): %: %.o $(addsuffix .o,$(MODULES)) Makefile
	$(CLINKER) $< $(addsuffix .o,$(MODULES)) $(CFLAGS) $(LOGOPTION) \
        $(addprefix -L,$(LIBPATH)) $(addprefix -l,$(LIBS)) -o $@


# produce executables

mkxeq: $(MAIN)


# remove old executables

rmxeq:
	@ -rm -f $(MAIN); \
        echo "delete old executables"


# make dependencies

mkdep:  $(addsuffix .d,$(PGMS))
	@ echo "generate tables of dependencies"


# clean directory

clean:
	@ -rm -rf *.d *.o *.alog *.clog *.slog $(MAIN)
.PHONY: clean

################################################################################
